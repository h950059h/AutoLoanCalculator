<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.oskar.autoloancalculator.autoLoanCalculator">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Price:"
            android:id="@+id/textView2"
            android:layout_weight="0.06" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/carPrice"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interest Rate:"
            android:id="@+id/textView"
            android:layout_weight="0.06" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interest"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Term(months):"
            android:id="@+id/textView3"
            android:layout_weight="0.06" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/term"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Payment:"
            android:id="@+id/textView4"
            android:layout_weight="0.04" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payment"
            android:layout_gravity="right"
            android:layout_weight="0.06" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Cost after Financing:"
            android:id="@+id/textView5"
            android:layout_weight="0.06" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalCostBox"
            android:layout_weight="0.06" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Monthly Payment"
            android:id="@+id/calculateLoan"
            android:layout_weight="0.06"
            android:onClick="CalculatePayment" />


    </LinearLayout>

</RelativeLayout>
